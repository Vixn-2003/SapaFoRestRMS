<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giới thiệu Nhà hàng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        * {
            box-sizing: border-box;
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            background-color: #f8f9fa;
            overflow-x: hidden;
        }

        /* Mỗi intro là 1 section chiếm toàn màn hình */
        .intro-section {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 60px;
            transition: background-color 0.4s ease;
        }

            /* Xen kẽ màu nền */
            .intro-section:nth-child(odd) {
                background-color: #fff;
            }

            .intro-section:nth-child(even) {
                background-color: #f3f3f3;
            }

        /* Bố cục bên trong */
        .intro-container {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            justify-content: center;
            gap: 40px;
            max-width: 1200px;
        }

        .intro-image img, .intro-video iframe {
            width: 500px;
            height: 350px;
            object-fit: cover;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.2);
        }

        .intro-content {
            max-width: 550px;
        }

        .intro-title {
            font-size: 2.2rem;
            font-weight: 700;
            color: #198754;
        }

        .intro-description {
            font-size: 1.1rem;
            color: #555;
            margin-top: 15px;
            line-height: 1.8;
        }

        footer {
            background-color: #222;
            color: #ccc;
            text-align: center;
            padding: 25px 0;
        }

        @@media (max-width: 992px) {
            .intro-section

        {
            flex-direction: column;
            padding: 30px;
        }

        .intro-container {
            flex-direction: column;
        }

        .intro-image img, .intro-video iframe {
            width: 100%;
            height: 300px;
        }

        .intro-content {
            text-align: center;
        }

        }

        /* Hiệu ứng fade khi cuộn */
        .fade-in {
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.8s ease-out;
        }

            .fade-in.active {
                opacity: 1;
                transform: translateY(0);
            }
    </style>
</head>
<body>

    <div id="intro-wrapper"></div>

    <footer>
        <p>&copy; 2025 Sapa Forest Restaurant | Thiết kế bởi Lương</p>
    </footer>

    <script>
        async function loadRestaurantIntro() {
          try {
            const response = await fetch("https://localhost:7096/api/RestaurantIntro/active");
            if (!response.ok) throw new Error("Lỗi khi gọi API");

            const intros = await response.json();
            const wrapper = document.getElementById("intro-wrapper");
            wrapper.innerHTML = "";

            intros.forEach((intro, index) => {
              // Xử lý link YouTube
              let embedUrl = "";
              if (intro.videoUrl?.includes("youtube.com/watch?v=")) {
                const videoId = new URL(intro.videoUrl).searchParams.get("v");
                embedUrl = `https://www.youtube.com/embed/${videoId}`;
              } else if (intro.videoUrl?.includes("youtu.be/")) {
                const videoId = intro.videoUrl.split("youtu.be/")[1];
                embedUrl = `https://www.youtube.com/embed/${videoId}`;
              }

              const section = document.createElement("section");
              section.className = "intro-section fade-in";

              // Xen kẽ trái - phải
              const isEven = index % 2 === 0;
              section.innerHTML = `
                <div class="intro-container ${isEven ? '' : 'flex-row-reverse'}">
                  <div class="intro-image">
                    ${intro.imageUrl ? `<img src="${intro.imageUrl}" alt="${intro.title}">` : ""}
                    ${embedUrl ? `<div class="intro-video mt-3"><iframe src="${embedUrl}" allowfullscreen></iframe></div>` : ""}
                  </div>
                  <div class="intro-content">
                    <h2 class="intro-title">${intro.title}</h2>
                    <p class="intro-description">${intro.description || "Không có mô tả."}</p>
                  </div>
                </div>
              `;
              wrapper.appendChild(section);
            });

            // Hiệu ứng fade-in khi cuộn
            const fadeEls = document.querySelectorAll(".fade-in");
            function checkFadeIn() {
              fadeEls.forEach(el => {
                const rect = el.getBoundingClientRect();
                if (rect.top < window.innerHeight - 100) el.classList.add("active");
              });
            }
            window.addEventListener("scroll", checkFadeIn);
            checkFadeIn();

          } catch (error) {
            console.error("❌ Lỗi:", error);
            document.getElementById("intro-wrapper").innerHTML =
              `<p class="text-danger text-center mt-5">Không thể tải dữ liệu giới thiệu.</p>`;
          }
        }

        window.onload = loadRestaurantIntro;
    </script>
</body>
</html>
