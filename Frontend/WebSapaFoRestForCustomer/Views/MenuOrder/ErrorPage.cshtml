@{
    ViewData["Title"] = "Lỗi";
    Layout = null; // Đảm bảo không dùng layout chung
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }
        /* Thêm nền nhẹ */
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="text-center p-5 bg-white rounded shadow-sm">
            <h1 class="text-danger mb-3">⚠️ Không thể gọi món!</h1>
            <p class="lead mb-3">Lý do: @(ViewBag.Error ?? "Đã xảy ra lỗi không xác định.")</p>
            <p class="mb-4">Vui lòng liên hệ nhân viên để được hỗ trợ.</p>
            <a href="javascript:location.reload();" class="btn btn-primary">Thử lại</a>
            <a href="javascript:location.reload();" class="btn btn-danger">Gọi nhân viên</a>

        </div>
    </div>
</body>
</html>