@model WebSapaFoRestForCustomer.Controllers.VerifyOtpDto
@{
    Layout = null;
    ViewData["Title"] = "Xác thực OTP - SapaFoRest";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/auth/login.css" />
</head>
<body>
    <div class="login-container">
        <div class="left-section">
            <img src="~/img/background_img/login_background.png" alt="SapaFoRest View" class="background-image" />
        </div>

        <div class="right-section">
            <div class="login-box">
                <h2>Xác thực OTP</h2>
                <h3><span>SapaFoRest</span></h3>
                <p class="subtitle">Nhập mã xác thực đã gửi đến <strong>@Model.Phone</strong></p>

                <form asp-action="VerifyOtp" method="post" autocomplete="off">
                    @Html.AntiForgeryToken()
                    <input asp-for="Phone" type="hidden" />

                    <div class="form-group">
                        <label>Mã OTP</label>
                        <div class="input-wrapper">
                            <i class="bi bi-shield-check"></i>
                            <input asp-for="Code" type="text" placeholder="Nhập mã OTP" maxlength="6" required />
                        </div>
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn-login">Xác thực</button>
                </form>

                <div class="otp-actions">
                    <p>Không nhận được mã?</p>
                    <a href="@Url.Action("ResendOtp", new { phone = Model.Phone })" class="resend-link">Gửi lại mã OTP</a>
                </div>

                <div class="back-to-login">
                    <a href="@Url.Action("Login")" class="back-link">
                        <i class="bi bi-arrow-left"></i> Quay lại đăng nhập
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/auth/verify-otp.js"></script>
</body>
</html>
