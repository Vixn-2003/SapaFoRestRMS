@model WebSapaForestForStaff.Models.SystemLogoViewModel

<div class="container mt-4">
    <h4>@(Model.LogoId == 0 ? "Thêm logo mới" : "Cập nhật logo")</h4>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="@(Model.LogoId == 0 ? "Create" : "Edit")"
          method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="LogoId" />

        <div class="mb-3">
            <label asp-for="LogoName" class="form-label">Tên logo</label>
            <input asp-for="LogoName" class="form-control" />
            <span asp-validation-for="LogoName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Mô tả</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Ảnh logo</label><br />

            @if (!string.IsNullOrEmpty(Model.LogoUrl))
            {
                <img src="@Model.LogoUrl" alt="Logo" style="height:80px;" class="mb-2 border rounded" />
                <input type="hidden" asp-for="LogoUrl" />
            }

            <input type="file" name="file" class="form-control" accept="image/*" />
            <span asp-validation-for="File" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
            <label class="form-check-label" for="IsActive">Kích hoạt</label>
        </div>

        <button class="btn btn-primary" type="submit">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
