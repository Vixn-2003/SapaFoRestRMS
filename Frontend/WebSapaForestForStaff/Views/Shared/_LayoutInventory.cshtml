<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - WareHouse</title>
    <style>
        /* Reset cho toàn bộ trang */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background-color: #e8eaed;
            height: 100vh;
            overflow: hidden;
        }

        /* Scope tất cả CSS của layout vào container chính */
        .layout-container {
            display: flex;
            height: 100vh;
        }

        /* Sidebar - prefix với .layout-sidebar */
        .layout-sidebar {
            width: 250px;
            background: linear-gradient(180deg, #c4c4c4 0%, #a8a8a8 100%);
            display: flex;
            flex-direction: column;
            padding: 20px 0;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
            flex-shrink: 0;
        }

            .layout-sidebar .sidebar-logo {
                padding: 0 20px 10px;
                margin-bottom: 20px;
                border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            }

                .layout-sidebar .sidebar-logo h1 {
                    color: #22c55e;
                    font-size: 24px;
                    font-weight: 700;
                    margin-bottom: 5px;
                }

                .layout-sidebar .sidebar-logo p {
                    color: #333;
                    font-size: 12px;
                    font-weight: 500;
                }

            .layout-sidebar .sidebar-menu {
                flex: 1;
                overflow-y: auto;
            }

            .layout-sidebar .sidebar-menu-item {
                display: flex;
                align-items: center;
                padding: 14px 20px;
                color: #333;
                text-decoration: none;
                transition: all 0.3s ease;
                cursor: pointer;
                font-size: 14px;
                font-weight: 500;
                margin: 0 15px 5px;
                border-radius: 8px;
            }

                .layout-sidebar .sidebar-menu-item:hover {
                    background-color: rgba(255, 255, 255, 0.2);
                }

                /* Active state - màu xanh lá với chữ trắng */
                .layout-sidebar .sidebar-menu-item.active {
                    background-color: #22c55e;
                    color: white;
                    box-shadow: 0 2px 8px rgba(34, 197, 94, 0.3);
                }

                    .layout-sidebar .sidebar-menu-item.active svg {
                        color: white;
                    }

                .layout-sidebar .sidebar-menu-item svg {
                    width: 20px;
                    height: 20px;
                    margin-right: 12px;
                    flex-shrink: 0;
                    color: #333;
                    transition: color 0.3s ease;
                }

            /* User Section */
            .layout-sidebar .sidebar-user-section {
                padding: 15px 20px;
                margin: 10px 15px;
                background-color: rgba(255, 255, 255, 0.15);
                border-radius: 8px;
                display: flex;
                align-items: center;
                gap: 10px;
            }

            .layout-sidebar .sidebar-user-avatar {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                background-color: #3b82f6;
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                font-weight: 600;
                font-size: 16px;
                flex-shrink: 0;
            }

            .layout-sidebar .sidebar-user-info {
                flex: 1;
                min-width: 0;
            }

            .layout-sidebar .sidebar-user-name {
                font-size: 13px;
                font-weight: 600;
                color: #333;
                margin-bottom: 2px;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .layout-sidebar .sidebar-user-email {
                font-size: 11px;
                color: #555;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .layout-sidebar .sidebar-logout-btn {
                width: calc(100% - 30px);
                margin: 10px 15px;
                padding: 12px;
                background-color: #dc2626;
                color: white;
                border: none;
                border-radius: 8px;
                font-size: 14px;
                font-weight: 600;
                cursor: pointer;
                transition: all 0.3s ease;
            }

                .layout-sidebar .sidebar-logout-btn:hover {
                    background-color: #b91c1c;
                    transform: translateY(-2px);
                    box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
                }

        /* Main Content - prefix với .layout-main */
        .layout-main-content {
            margin: 20px;
            flex: 1;
            overflow-y: auto;
            background-color: #e8eaed;
            min-width: 0;
        }

            /* Scrollbar styling - chỉ cho layout */
            .layout-sidebar .sidebar-menu::-webkit-scrollbar,
            .layout-main-content::-webkit-scrollbar {
                width: 6px;
            }

            .layout-sidebar .sidebar-menu::-webkit-scrollbar-track,
            .layout-main-content::-webkit-scrollbar-track {
                background: transparent;
            }

            .layout-sidebar .sidebar-menu::-webkit-scrollbar-thumb,
            .layout-main-content::-webkit-scrollbar-thumb {
                background: rgba(0, 0, 0, 0.2);
                border-radius: 3px;
            }

                .layout-sidebar .sidebar-menu::-webkit-scrollbar-thumb:hover,
                .layout-main-content::-webkit-scrollbar-thumb:hover {
                    background: rgba(0, 0, 0, 0.3);
                }

        /* Responsive */
        @@media (max-width: 768px) {
            .layout-sidebar {
                width: 200px;
            }

            .layout-main-content {
                padding: 15px;
            }
        }

        @@media (max-width: 576px) {
            .layout-sidebar {
                width: 70px;
            }

                .layout-sidebar .sidebar-logo p,
                .layout-sidebar .sidebar-user-info,
                .layout-sidebar .sidebar-menu-item span {
                    display: none;
                }

                .layout-sidebar .sidebar-logo h1 {
                    font-size: 18px;
                }

                .layout-sidebar .sidebar-menu-item svg {
                    margin-right: 0;
                }

                .layout-sidebar .sidebar-logout-btn {
                    font-size: 0;
                    padding: 12px;
                }

                    .layout-sidebar .sidebar-logout-btn::before {
                        content: '↩';
                        font-size: 18px;
                    }
        }
    </style>
</head>
<body>
    <div class="layout-container">
        <!-- Sidebar -->
        <aside class="layout-sidebar">
            <div class="sidebar-logo">
                <h1>WareHouse</h1>
                <p>Quản lý kho</p>
            </div>

            <nav class="sidebar-menu">
                <a href="@Url.Action("Index", "Dashboard")"
                   class="sidebar-menu-item"
                   data-controller="Dashboard">
