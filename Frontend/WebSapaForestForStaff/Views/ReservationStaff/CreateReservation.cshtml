@model ReservationViewModel
@{
    ViewData["Title"] = "Đặt bàn cho khách";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Đặt bàn tại Nhà hàng Rừng Xanh</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form asp-action="CreateReservation" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="CustomerName" class="form-label"></label>
            <input asp-for="CustomerName" class="form-control" placeholder="Nhập tên khách" />
            <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="mb-3 d-flex gap-3">
            <div class="flex-fill">
                <label asp-for="ReservationDate" class="form-label"></label>
                <input asp-for="ReservationDate" type="date" class="form-control" />
                <span asp-validation-for="ReservationDate" class="text-danger"></span>
            </div>
            <div class="flex-fill">
                <label asp-for="ReservationTime" class="form-label"></label>
                <select asp-for="ReservationTime" class="form-select">
                    @{
                        var start = new TimeSpan(6, 0, 0);
                        var end = new TimeSpan(22, 0, 0);
                        for (var time = start; time <= end; time += TimeSpan.FromMinutes(30))
                        {
                            <option value="@time">@time.ToString(@"hh\:mm")</option>
                        }
                    }
                </select>
                <span asp-validation-for="ReservationTime" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="NumberOfGuests" class="form-label"></label>
            <input asp-for="NumberOfGuests" type="number" min="1" class="form-control" />
            <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Notes" class="form-label"></label>
            <textarea asp-for="Notes" class="form-control" placeholder="Ghi chú (nếu có)"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Xác nhận đặt bàn</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
