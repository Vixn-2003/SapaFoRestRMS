@model WebSapaForestForStaff.Models.ReservationViewModel

@{
    ViewData["Title"] = "Tạo đơn đặt bàn mới";
}

<div class="container mt-4">
    <h3>🪑 Thêm đơn đặt bàn mới</h3>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success fade-message">@TempData["Success"]</div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger fade-message">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <form asp-action="CreateReservation" method="post">
        <div class="mb-3">
            <label class="form-label">Tên khách hàng</label>
            <input asp-for="CustomerName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Số điện thoại</label>
            <input asp-for="Phone" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Ngày đặt</label>
            <input asp-for="ReservationDate" type="date" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Giờ đến</label>
            <input asp-for="ReservationTime" type="time" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Số lượng khách</label>
            <input asp-for="NumberOfGuests" type="number" min="1" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Ghi chú</label>
            <textarea asp-for="Notes" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Tạo đơn</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>

@section Scripts {
    <script>
        // Ẩn các thông báo sau 3 giây
        setTimeout(() => {
            document.querySelectorAll('.fade-message').forEach(el => {
                el.style.transition = "opacity 0.5s ease";
                el.style.opacity = 0;
                setTimeout(() => el.remove(), 500); // Xóa hoàn toàn sau khi ẩn
            });
        }, 3000);
    </script>
}
