@model WebSapaForestForStaff.DTOs.UserManagement.UnifiedCreateUserRequest
@{
    ViewData["Title"] = "Tạo người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var roles = ViewBag.Roles as List<WebSapaForestForStaff.DTOs.Role> ?? new();
    var positions = ViewBag.Positions as List<WebSapaForestForStaff.DTOs.Position> ?? new();
}

@section Styles {
    <link rel="stylesheet" href="~/css/design-system.css" />
    <link rel="stylesheet" href="~/css/users.css" />
}

<div class="container-fluid">
    <div class="page-header d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Tạo người dùng</h1>
            <p class="page-subtitle">Gộp tạo User / Manager / Staff trong một form</p>
        </div>
        <a asp-action="Index" class="btn-text-custom" data-bs-toggle="tooltip" title="Quay lại">
            <i class="bi bi-arrow-left"></i>
        </a>
    </div>

    <div class="card-custom">
        <div class="card-body-custom">
            <form asp-action="CreateUnified" method="post" id="createUnifiedForm">
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label-custom required">Họ và tên</label>
                        <input asp-for="FullName" class="form-control form-control-custom" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label-custom required">Email</label>
                        <input asp-for="Email" class="form-control form-control-custom" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label-custom">Số điện thoại</label>
                        <input asp-for="Phone" class="form-control form-control-custom" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label-custom required">Vai trò</label>
                        <select asp-for="RoleId" class="form-select form-control-custom" id="roleSelect">
                            @foreach (var r in roles)
                            {
                                <option value="@r.RoleId">@r.RoleName</option>
                            }
                        </select>
                    </div>
                </div>

                <hr />

                <div id="staffSection" style="display:none;">
                    <h5 class="heading-h2 mb-3">Thông tin nhân viên</h5>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label-custom">Ngày vào làm</label>
                            <input asp-for="HireDate" type="date" class="form-control form-control-custom" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label-custom">Lương cơ bản (VNĐ)</label>
                            <input asp-for="SalaryBase" type="number" step="10000" class="form-control form-control-custom" />
                        </div>
                        <div class="col-md-12">
                            <label class="form-label-custom">Vị trí</label>
                            <div class="position-checkbox-group d-flex flex-wrap gap-3">
                                @foreach (var p in positions)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="PositionIds" value="@p.PositionId" id="pos_@p.PositionId" />
                                        <label class="form-check-label" for="pos_@p.PositionId">@p.PositionName</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn-primary-custom" data-bs-toggle="tooltip" title="Lưu"> 
                        <i class="bi bi-check2-circle"></i>
                    </button>
                    <a asp-action="Index" class="btn-secondary-custom" data-bs-toggle="tooltip" title="Hủy">
                        <i class="bi bi-x-circle"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Enable tooltips
            if (typeof bootstrap !== 'undefined') {
                var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                tooltipTriggerList.map(function (tooltipTriggerEl) { return new bootstrap.Tooltip(tooltipTriggerEl); });
            }

            const roleSelect = document.getElementById('roleSelect');
            const staffSection = document.getElementById('staffSection');
            const STAFF_ROLE_ID = 4; // Staff
            function toggleStaffSection() {
                const roleId = parseInt(roleSelect.value);
                staffSection.style.display = (roleId === STAFF_ROLE_ID) ? '' : 'none';
            }
            roleSelect.addEventListener('change', toggleStaffSection);
            toggleStaffSection();
        });
    </script>
}
