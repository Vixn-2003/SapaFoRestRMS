@model WebSapaForestForStaff.DTOs.UserManagement.PasswordResetRequest

@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">Đặt lại mật khẩu</h1>
            <p class="page-subtitle">Tạo mật khẩu mới cho người dùng</p>
        </div>
        <div class="page-actions">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-key"></i> Đặt lại mật khẩu
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="ResetPassword" method="post" id="resetPasswordForm">
                        @Html.AntiForgeryToken()
                        <input asp-for="UserId" type="hidden" />
                        
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Lưu ý:</strong> Hành động này sẽ tạo mật khẩu mới cho người dùng và vô hiệu hóa mật khẩu cũ.
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">Mật khẩu mới (tùy chọn)</label>
                            <div class="input-group">
                                <input asp-for="NewPassword" type="password" class="form-control" 
                                       placeholder="Nhập mật khẩu mới hoặc để trống để tự động tạo" />
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <div class="form-text">
                                Để trống để hệ thống tự động tạo mật khẩu ngẫu nhiên
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="SendEmailNotification" class="form-check-input" type="checkbox" />
                                <label asp-for="SendEmailNotification" class="form-check-label">
                                    Gửi email thông báo mật khẩu mới cho người dùng
                                </label>
                            </div>
                        </div>

                        <div class="password-preview" id="passwordPreview" style="display: none;">
                            <div class="alert alert-success">
                                <h6><i class="bi bi-shield-check"></i> Mật khẩu được tạo:</h6>
                                <div class="password-display">
                                    <code id="generatedPassword"></code>
                                    <button type="button" class="btn btn-sm btn-outline-primary ms-2" onclick="copyPassword()">
                                        <i class="bi bi-clipboard"></i> Copy
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Hủy
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Đặt lại mật khẩu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle"></i> Hướng dẫn
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h6><i class="bi bi-exclamation-triangle"></i> Lưu ý quan trọng:</h6>
                        <ul class="mb-0">
                            <li>Mật khẩu cũ sẽ bị vô hiệu hóa ngay lập tức</li>
                            <li>Người dùng sẽ cần đăng nhập lại với mật khẩu mới</li>
                            <li>Nếu bật email, người dùng sẽ nhận thông báo</li>
                            <li>Mật khẩu tự động tạo sẽ có độ dài 8-12 ký tự</li>
                        </ul>
                    </div>

                    <div class="mt-3">
                        <h6>Yêu cầu mật khẩu:</h6>
                        <ul class="password-requirements">
                            <li><i class="bi bi-check text-success"></i> Tối thiểu 6 ký tự</li>
                            <li><i class="bi bi-check text-success"></i> Tối đa 50 ký tự</li>
                            <li><i class="bi bi-check text-success"></i> Có thể chứa chữ, số và ký tự đặc biệt</li>
                        </ul>
                    </div>

                    <div class="mt-3">
                        <h6>Bảo mật:</h6>
                        <div class="security-tips">
                            <div class="tip-item">
                                <i class="bi bi-shield-lock"></i>
                                <span>Mật khẩu được mã hóa an toàn</span>
                            </div>
                            <div class="tip-item">
                                <i class="bi bi-envelope"></i>
                                <span>Email thông báo được gửi bảo mật</span>
                            </div>
                            <div class="tip-item">
                                <i class="bi bi-clock"></i>
                                <span>Mật khẩu cũ hết hiệu lực ngay lập tức</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #dee2e6;
    }

    .header-content .page-title {
        margin: 0;
        color: #2f2f2f;
        font-weight: 600;
    }

    .header-content .page-subtitle {
        margin: 0.5rem 0 0 0;
        color: #6c757d;
        font-size: 0.9rem;
    }

    .page-actions {
        display: flex;
        gap: 0.5rem;
    }

    .form-text {
        font-size: 0.875rem;
        color: #6c757d;
    }

    .password-display {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-top: 0.5rem;
    }

    .password-display code {
        background-color: #f8f9fa;
        padding: 0.5rem;
        border-radius: 0.25rem;
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
        flex: 1;
    }

    .password-requirements {
        list-style: none;
        padding: 0;
    }

    .password-requirements li {
        margin-bottom: 0.25rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .security-tips {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .tip-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: #6c757d;
    }

    .tip-item i {
        color: #007bff;
    }

    .alert ul {
        padding-left: 1rem;
    }

    .alert li {
        margin-bottom: 0.25rem;
    }
</style>

<script>
    document.getElementById('togglePassword').addEventListener('click', function() {
        const passwordInput = document.getElementById('NewPassword');
        const toggleIcon = this.querySelector('i');
        
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            toggleIcon.classList.remove('bi-eye');
            toggleIcon.classList.add('bi-eye-slash');
        } else {
            passwordInput.type = 'password';
            toggleIcon.classList.remove('bi-eye-slash');
            toggleIcon.classList.add('bi-eye');
        }
    });

    function generatePassword() {
        const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!#$%^&*';
        let password = '';
        for (let i = 0; i < 10; i++) {
            password += chars.charAt(Math.floor(Math.random() * chars.length));
        }
        return password;
    }

    function copyPassword() {
        const passwordText = document.getElementById('generatedPassword').textContent;
        navigator.clipboard.writeText(passwordText).then(function() {
            alert('Mật khẩu đã được sao chép!');
        });
    }

    // Auto-generate password if field is empty
    document.getElementById('resetPasswordForm').addEventListener('submit', function(e) {
        const passwordInput = document.getElementById('NewPassword');
        if (!passwordInput.value.trim()) {
            const generatedPassword = generatePassword();
            passwordInput.value = generatedPassword;
            document.getElementById('generatedPassword').textContent = generatedPassword;
            document.getElementById('passwordPreview').style.display = 'block';
        }
    });
</script>
