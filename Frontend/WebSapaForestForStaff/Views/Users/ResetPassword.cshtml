@model WebSapaForestForStaff.DTOs.UserManagement.PasswordResetRequest

@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">Đặt lại mật khẩu</h1>
            <p class="page-subtitle">Tạo mật khẩu mới cho người dùng</p>
        </div>
        <div class="page-actions">
            <a asp-action="Index" class="btn-secondary-custom btn-medium">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card-custom">
                <div class="card-header-custom">
                    <h5 class="card-title mb-0 heading-h2">
                        <i class="bi bi-key"></i> Đặt lại mật khẩu
                    </h5>
                </div>
                <div class="card-body-custom">
                    <form asp-action="ResetPassword" method="post" id="resetPasswordForm">
                        @Html.AntiForgeryToken()
                        <input asp-for="UserId" type="hidden" />
                        
                        <div class="info-card">
                            <div class="alert alert-info" style="background-color: var(--primary-100); border-color: var(--primary-500);">
                                <i class="bi bi-info-circle"></i>
                                <strong class="body-base">Lưu ý:</strong> <span class="body-base">Hành động này sẽ tạo mật khẩu mới cho người dùng và vô hiệu hóa mật khẩu cũ.</span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label-custom">Mật khẩu mới (tùy chọn)</label>
                            <div class="input-group">
                                <input asp-for="NewPassword" type="password" class="form-control-custom" 
                                       placeholder="Nhập mật khẩu mới hoặc để trống để tự động tạo" />
                                <button class="btn-secondary-custom btn-small" type="button" id="togglePassword">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <div class="body-small text-gray-custom mt-1">
                                Để trống để hệ thống tự động tạo mật khẩu ngẫu nhiên
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger body-small"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="SendEmailNotification" class="form-check-input" type="checkbox" />
                                <label asp-for="SendEmailNotification" class="form-check-label body-base">
                                    Gửi email thông báo mật khẩu mới cho người dùng
                                </label>
                            </div>
                        </div>

                        <div class="password-preview" id="passwordPreview" style="display: none;">
                            <div class="info-card">
                                <div class="alert alert-success" style="background-color: rgba(76, 175, 80, 0.1); border-color: var(--semantic-success);">
                                    <h6 class="heading-h2" style="color: var(--semantic-success); margin-bottom: 8px;"><i class="bi bi-shield-check"></i> Mật khẩu được tạo:</h6>
                                    <div class="password-display">
                                        <code id="generatedPassword" class="body-base"></code>
                                        <button type="button" class="btn-text-custom btn-small" onclick="copyPassword()">
                                            <i class="bi bi-clipboard"></i> Copy
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn-secondary-custom btn-medium">
                                <i class="bi bi-x-circle"></i> Hủy
                            </a>
                            <button type="submit" class="btn-primary-custom btn-medium">
                                <i class="bi bi-check-circle"></i> Đặt lại mật khẩu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card-custom">
                <div class="card-header-custom">
                    <h5 class="card-title mb-0 heading-h2">
                        <i class="bi bi-info-circle"></i> Hướng dẫn
                    </h5>
                </div>
                <div class="card-body-custom">
                    <div class="info-card">
                        <div class="alert alert-warning" style="background-color: rgba(255, 193, 7, 0.1); border-color: var(--semantic-warning);">
                            <h6 class="heading-h2" style="color: #F57C00; margin-bottom: 8px;"><i class="bi bi-exclamation-triangle"></i> Lưu ý quan trọng:</h6>
                            <ul class="mb-0 body-base">
                                <li>Mật khẩu cũ sẽ bị vô hiệu hóa ngay lập tức</li>
                                <li>Người dùng sẽ cần đăng nhập lại với mật khẩu mới</li>
                                <li>Nếu bật email, người dùng sẽ nhận thông báo</li>
                                <li>Mật khẩu tự động tạo sẽ có độ dài 8-12 ký tự</li>
                            </ul>
                        </div>
                    </div>

                    <div class="mt-3">
                        <h6 class="heading-h2">Yêu cầu mật khẩu:</h6>
                        <ul class="password-requirements body-base">
                            <li><i class="bi bi-check text-success"></i> Tối thiểu 6 ký tự</li>
                            <li><i class="bi bi-check text-success"></i> Tối đa 50 ký tự</li>
                            <li><i class="bi bi-check text-success"></i> Có thể chứa chữ, số và ký tự đặc biệt</li>
                        </ul>
                    </div>

                    <div class="mt-3">
                        <h6 class="heading-h2">Bảo mật:</h6>
                        <div class="security-tips">
                            <div class="tip-item body-base">
                                <i class="bi bi-shield-lock" style="color: var(--primary-500);"></i>
                                <span>Mật khẩu được mã hóa an toàn</span>
                            </div>
                            <div class="tip-item body-base">
                                <i class="bi bi-envelope" style="color: var(--primary-500);"></i>
                                <span>Email thông báo được gửi bảo mật</span>
                            </div>
                            <div class="tip-item body-base">
                                <i class="bi bi-clock" style="color: var(--primary-500);"></i>
                                <span>Mật khẩu cũ hết hiệu lực ngay lập tức</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/users.css">
    <link rel="stylesheet" href="~/css/users/resetPassword.css">
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/toast-notification.js"></script>
    <script src="~/js/users/resetPassword.js"></script>
}
