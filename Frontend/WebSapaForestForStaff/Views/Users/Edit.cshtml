@model WebSapaForestForStaff.DTOs.UserManagement.UserUpdateRequest

@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">Chỉnh sửa người dùng</h1>
            <p class="page-subtitle">Cập nhật thông tin người dùng: @Model.FullName</p>
        </div>
        <div class="page-actions">
            <a asp-action="Index" class="btn-secondary-custom btn-medium">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <a asp-action="Details" asp-route-id="@Model.UserId" class="btn-text-custom">
                <i class="bi bi-eye"></i> Xem chi tiết
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card-custom">
                <div class="card-header-custom">
                    <h5 class="card-title mb-0 heading-h2">
                        <i class="bi bi-person-gear"></i> Thông tin người dùng
                    </h5>
                </div>
                <div class="card-body-custom">
                    <form asp-action="Edit" method="post" id="editUserForm">
                        @Html.AntiForgeryToken()
                        <input asp-for="UserId" type="hidden" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FullName" class="form-label-custom required"></label>
                                    <input asp-for="FullName" class="form-control-custom" placeholder="Nhập họ và tên" />
                                    <span asp-validation-for="FullName" class="text-danger body-small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label-custom required"></label>
                                    <input asp-for="Email" type="email" class="form-control-custom" placeholder="example@email.com" />
                                    <span asp-validation-for="Email" class="text-danger body-small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Phone" class="form-label-custom"></label>
                                    <input asp-for="Phone" class="form-control-custom" placeholder="Nhập số điện thoại" />
                                    <span asp-validation-for="Phone" class="text-danger body-small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="RoleId" class="form-label-custom required"></label>
                                    <select asp-for="RoleId" class="form-control-custom" asp-items="@(new SelectList(ViewBag.Roles, "RoleId", "RoleName"))">
                                        <option value="">-- Chọn vai trò --</option>
                                    </select>
                                    <span asp-validation-for="RoleId" class="text-danger body-small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label-custom"></label>
                                    <select asp-for="Status" class="form-control-custom">
                                        <option value="0">Hoạt động</option>
                                        <option value="1">Không hoạt động</option>
                                        <option value="2">Khóa</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger body-small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="AvatarUrl" class="form-label-custom"></label>
                                    <input asp-for="AvatarUrl" type="url" class="form-control-custom" placeholder="URL hình ảnh đại diện" />
                                    <div class="body-small text-gray-custom mt-1">Đường dẫn đến hình ảnh đại diện</div>
                                    <span asp-validation-for="AvatarUrl" class="text-danger body-small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn-secondary-custom btn-medium">
                                <i class="bi bi-x-circle"></i> Hủy
                            </a>
                            <button type="submit" class="btn-primary-custom btn-medium">
                                <i class="bi bi-check-circle"></i> Cập nhật
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card-custom">
                <div class="card-header-custom">
                    <h5 class="card-title mb-0 heading-h2">
                        <i class="bi bi-info-circle"></i> Thông tin bổ sung
                    </h5>
                </div>
                <div class="card-body-custom">
                    <div class="info-card">
                        <div class="alert alert-warning" style="background-color: rgba(255, 193, 7, 0.1); border-color: var(--semantic-warning);">
                            <h6 class="heading-h2" style="color: #F57C00; margin-bottom: 8px;"><i class="bi bi-exclamation-triangle"></i> Lưu ý:</h6>
                            <ul class="mb-0 body-base">
                                <li>Thay đổi email sẽ ảnh hưởng đến đăng nhập</li>
                                <li>Thay đổi vai trò sẽ ảnh hưởng đến quyền truy cập</li>
                                <li>Vô hiệu hóa tài khoản sẽ ngăn người dùng đăng nhập</li>
                            </ul>
                        </div>
                    </div>

                    <div class="mt-3">
                        <h6 class="heading-h2">Trạng thái tài khoản:</h6>
                        <div class="status-info">
                            <div class="status-item">
                                <span class="badge-custom success">Hoạt động</span>
                                <small class="body-small text-gray-custom">Người dùng có thể đăng nhập</small>
                            </div>
                            <div class="status-item">
                                <span class="badge-custom error">Không hoạt động</span>
                                <small class="body-small text-gray-custom">Tạm thời vô hiệu hóa</small>
                            </div>
                            <div class="status-item">
                                <span class="badge-custom warning">Khóa</span>
                                <small class="body-small text-gray-custom">Bị khóa vĩnh viễn</small>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <h6 class="heading-h2">Thao tác khác:</h6>
                        <div class="d-grid gap-2">
                            @if (User.IsInRole("Admin") || User.IsInRole("Owner"))
                            {
                                <a asp-action="ResetPassword" asp-route-id="@Model.UserId" class="btn-text-custom">
                                    <i class="bi bi-key"></i> Đặt lại mật khẩu
                                </a>
                            }
                            <a asp-action="Details" asp-route-id="@Model.UserId" class="btn-text-custom">
                                <i class="bi bi-eye"></i> Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/users.css">
    <link rel="stylesheet" href="~/css/users/edit.css">
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/toast-notification.js"></script>
    <script src="~/js/users/edit.js"></script>
}
