@model WebSapaForestForStaff.DTOs.UserManagement.UserUpdateRequest

@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">Chỉnh sửa người dùng</h1>
            <p class="page-subtitle">Cập nhật thông tin người dùng: @Model.FullName</p>
        </div>
        <div class="page-actions">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <a asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-info">
                <i class="bi bi-eye"></i> Xem chi tiết
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-person-gear"></i> Thông tin người dùng
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" id="editUserForm">
                        @Html.AntiForgeryToken()
                        <input asp-for="UserId" type="hidden" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FullName" class="form-label required"></label>
                                    <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label required"></label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="example@email.com" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Phone" class="form-label"></label>
                                    <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="RoleId" class="form-label required"></label>
                                    <select asp-for="RoleId" class="form-select" asp-items="@(new SelectList(ViewBag.Roles, "RoleId", "RoleName"))">
                                        <option value="">-- Chọn vai trò --</option>
                                    </select>
                                    <span asp-validation-for="RoleId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label"></label>
                                    <select asp-for="Status" class="form-select">
                                        <option value="0">Hoạt động</option>
                                        <option value="1">Không hoạt động</option>
                                        <option value="2">Khóa</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="AvatarUrl" class="form-label"></label>
                                    <input asp-for="AvatarUrl" class="form-control" placeholder="URL hình ảnh đại diện" />
                                    <div class="form-text">Đường dẫn đến hình ảnh đại diện</div>
                                    <span asp-validation-for="AvatarUrl" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Hủy
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Cập nhật
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle"></i> Thông tin bổ sung
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h6><i class="bi bi-exclamation-triangle"></i> Lưu ý:</h6>
                        <ul class="mb-0">
                            <li>Thay đổi email sẽ ảnh hưởng đến đăng nhập</li>
                            <li>Thay đổi vai trò sẽ ảnh hưởng đến quyền truy cập</li>
                            <li>Vô hiệu hóa tài khoản sẽ ngăn người dùng đăng nhập</li>
                        </ul>
                    </div>

                    <div class="mt-3">
                        <h6>Trạng thái tài khoản:</h6>
                        <div class="status-info">
                            <div class="status-item">
                                <span class="badge bg-success">Hoạt động</span>
                                <small class="text-muted">Người dùng có thể đăng nhập</small>
                            </div>
                            <div class="status-item">
                                <span class="badge bg-danger">Không hoạt động</span>
                                <small class="text-muted">Tạm thời vô hiệu hóa</small>
                            </div>
                            <div class="status-item">
                                <span class="badge bg-warning">Khóa</span>
                                <small class="text-muted">Bị khóa vĩnh viễn</small>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <h6>Thao tác khác:</h6>
                        <div class="d-grid gap-2">
                            @if (User.IsInRole("Admin") || User.IsInRole("Owner"))
                            {
                                <a asp-action="ResetPassword" asp-route-id="@Model.UserId" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-key"></i> Đặt lại mật khẩu
                                </a>
                            }
                            <a asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-eye"></i> Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #dee2e6;
    }

    .header-content .page-title {
        margin: 0;
        color: #2f2f2f;
        font-weight: 600;
    }

    .header-content .page-subtitle {
        margin: 0.5rem 0 0 0;
        color: #6c757d;
        font-size: 0.9rem;
    }

    .page-actions {
        display: flex;
        gap: 0.5rem;
    }

    .required::after {
        content: " *";
        color: #dc3545;
    }

    .form-text {
        font-size: 0.875rem;
        color: #6c757d;
    }

    .status-info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .status-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .alert ul {
        padding-left: 1rem;
    }

    .alert li {
        margin-bottom: 0.25rem;
    }
</style>

<script>
    document.getElementById('editUserForm').addEventListener('submit', function(e) {
        const roleId = document.getElementById('RoleId').value;
        if (!roleId) {
            e.preventDefault();
            alert('Vui lòng chọn vai trò cho người dùng');
            return;
        }
    });
</script>
