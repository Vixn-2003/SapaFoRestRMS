@model WebSapaForestForStaff.DTOs.TableManage.TableCreateDto

@{
    ViewData["Title"] = "Thêm bàn mới";
}

<h2>Thêm bàn mới</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>Số bàn</label>
        <input asp-for="TableNumber" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Sức chứa</label>
        <input asp-for="Capacity" type="number" class="form-control" required min="1" />
    </div>
    <div class="mb-3">
        <label>Trạng thái</label>
        <select asp-for="Status" class="form-select">
            <option value="Available" selected="@(Model?.Status == "Available")">Available</option>
            <option value="Maintenance" selected="@(Model?.Status == "Maintenance")">Maintenance</option>
        </select>
    </div>
    <div class="mb-3">
        <label>Khu vực</label>
        <select asp-for="AreaId" class="form-select" required>
            <option value="">-- Chọn khu vực --</option>
            @if(ViewBag.Areas != null)
            {
                foreach (var area in ViewBag.Areas)
                {
                    <option value="@area.AreaId" selected="@(Model?.AreaId == area.AreaId )">
                        @area.AreaName (Tầng @area.Floor)
                    </option>
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success">Thêm bàn</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
</form>
