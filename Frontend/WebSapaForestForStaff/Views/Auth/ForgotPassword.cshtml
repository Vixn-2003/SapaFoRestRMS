@model WebSapaForestForStaff.DTOs.Auth.ForgotPasswordRequest
@{
    Layout = null;
    ViewData["Title"] = "Quên mật khẩu - SapaFoRest_RMS";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/design-system.css" />
    <link rel="stylesheet" href="~/css/auth/login.css" />
</head>
<body>
    <div class="login-container">
        <div class="left-section">
            <img src="~/img/background_img/login_background.png" alt="SapaFoRest View" class="background-image" />
        </div>

        <div class="right-section">
            <div class="login-box">
                <h2>Quên mật khẩu</h2>
                <p class="text-muted mb-4">Nhập email của bạn để nhận mã xác nhận đặt lại mật khẩu</p>

                <form id="forgotPasswordForm" method="post" autocomplete="off">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label>Email</label>
                        <div class="input-wrapper">
                            <i class="bi bi-envelope-fill"></i>
                            <input asp-for="Email" type="email" class="form-control-custom" placeholder="example@gmail.com" required />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn-primary-custom btn-large" style="width: 100%;" id="submitBtn">
                        <span id="submitText">Gửi mã xác nhận</span>
                        <span id="submitSpinner" class="spinner-border spinner-border-sm d-none" role="status"></span>
                    </button>

                    <div class="text-center mt-3">
                        <a href="@Url.Action("Login")" class="text-decoration-none">
                            <i class="bi bi-arrow-left"></i> Quay lại đăng nhập
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Toast Container -->
    <div id="toastContainer" class="toast-container-custom"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/toast-notification.js"></script>
    <script>
        document.getElementById('forgotPasswordForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const submitBtn = document.getElementById('submitBtn');
            const submitText = document.getElementById('submitText');
            const submitSpinner = document.getElementById('submitSpinner');
            const email = document.querySelector('input[name="Email"]').value;

            // Disable button and show spinner
            submitBtn.disabled = true;
            submitText.textContent = 'Đang gửi...';
            submitSpinner.classList.remove('d-none');

            try {
                const response = await fetch('@Url.Action("ForgotPassword", "Auth")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ email: email })
                });

                const data = await response.json();

                if (response.ok) {
                    showToast('success', 'Thành công', data.message || 'Mã xác nhận đã được gửi đến email của bạn. Vui lòng kiểm tra hộp thư.');
                    
                    // Redirect to reset password page after 2 seconds
                    setTimeout(() => {
                        window.location.href = '@Url.Action("ResetPassword", "Auth")?email=' + encodeURIComponent(email);
                    }, 2000);
                } else {
                    showToast('error', 'Lỗi', data.message || 'Đã xảy ra lỗi. Vui lòng thử lại.');
                    submitBtn.disabled = false;
                    submitText.textContent = 'Gửi mã xác nhận';
                    submitSpinner.classList.add('d-none');
                }
            } catch (error) {
                showToast('error', 'Lỗi', 'Đã xảy ra lỗi kết nối. Vui lòng thử lại.');
                submitBtn.disabled = false;
                submitText.textContent = 'Gửi mã xác nhận';
                submitSpinner.classList.add('d-none');
            }
        });
    </script>
</body>
</html>

