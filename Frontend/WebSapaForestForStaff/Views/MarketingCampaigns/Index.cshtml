@model WebSapaFoRestRMSForStaff.Models.CampaignDTO.PagedResult<WebSapaFoRestRMSForStaff.Models.CampaignDTO.MarketingCampaignDto>
@{
    ViewData["Title"] = "Quản lý chiến dịch tiếp thị";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="mdi mdi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="mdi mdi-alert-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Campaign List -->
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Danh sách chiến dịch tiếp thị</h4>
                
                <!-- Search & Filter Form -->
                <form method="get" asp-action="Index" class="mb-3">
                    <div class="row g-2">
                        <div class="col-md-3">
                            <input type="text" name="searchTerm" class="form-control" placeholder="Tìm kiếm..." value="@Context.Request.Query["searchTerm"]">
                        </div>
                        <div class="col-md-2">
                            <select name="campaignType" class="form-select">
                                <option value="">-- Thể loại --</option>
                                <option value="Discount" selected="@(Context.Request.Query["campaignType"] == "Discount")">Discount</option>
                                <option value="Promotion" selected="@(Context.Request.Query["campaignType"] == "Promotion")">Promotion</option>
                                <option value="Event" selected="@(Context.Request.Query["campaignType"] == "Event")">Event</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <select name="status" class="form-select">
                                <option value="">-- Trạng thái --</option>
                                <option value="Pending" selected="@(Context.Request.Query["status"] == "Pending")">Pending</option>
                                <option value="Active" selected="@(Context.Request.Query["status"] == "Active")">Active</option>
                                <option value="Completed" selected="@(Context.Request.Query["status"] == "Completed")">Completed</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <input type="date" name="startDate" class="form-control" value="@Context.Request.Query["startDate"]">
                        </div>
                        <div class="col-md-2">
                            <input type="date" name="endDate" class="form-control" value="@Context.Request.Query["endDate"]">
                        </div>
                        <div class="col-md-1">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="mdi mdi-filter"></i> Lọc
                            </button>
                        </div>
                    </div>
                </form>

                <div class="d-flex justify-content-between mb-3">
                    <div>
                        <span class="text-muted">Hiển thị @Model.Data.Count của @Model.TotalCount chiến dịch</span>
                    </div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="mdi mdi-plus me-1"></i> Thêm chiến dịch
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Tiêu đề</th>
                                <th>Loại</th>
                                <th>Thời gian</th>
                                <th>Ngân sách</th>
                                <th>Doanh thu</th>
                                <th>ROI</th>
                                <th>Lượt xem</th>
                                <th>Target KPI</th>
                                <th>Trạng thái</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model?.Data == null || !Model.Data.Any())
                            {
                                <tr>
                                    <td colspan="10" class="text-center py-4">
                                        <i class="mdi mdi-folder-open mdi-48px text-muted"></i>
                                        <p class="text-muted mt-2">Không có chiến dịch nào</p>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var campaign in Model.Data)
                                {
                                    var statusClass = campaign.Status?.ToLower() switch
                                    {
                                        "completed" => "badge bg-success",
                                        "active" => "badge bg-warning",
                                        "pending" => "badge bg-secondary",
                                        _ => "badge bg-light text-dark"
                                    };

                                    var roiValue = campaign.ROI ?? 0;
                                    var roiClass = roiValue >= 0 ? "text-success" : "text-danger";

                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(campaign.ImageUrl))
                                                {
                                                    <img src="@campaign.ImageUrl" alt="@campaign.Title" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                }
                                                <span class="fw-bold">@campaign.Title</span>
                                            </div>
                                        </td>
                                        <td><span class="badge bg-info">@campaign.CampaignType</span></td>
                                        <td>
                                            <small class="text-muted">
                                                @campaign.StartDate?.ToString("dd/MM/yyyy")<br />
                                                @campaign.EndDate?.ToString("dd/MM/yyyy")
                                            </small>
                                        </td>
                                        <td>@String.Format("{0:N0} VND", campaign.Budget)</td>
                                        <td class="fw-bold">@String.Format("{0:N0} VND", campaign.RevenueGenerated)</td>
                                        <td class="@roiClass fw-bold">@String.Format("{0:F2}%", roiValue)</td>
                                        <td>@String.Format("{0:N0}", campaign.ViewCount)</td>
                                        <td>
                                            @if (campaign.TargetReach.HasValue || campaign.TargetRevenue.HasValue)
                                            {
                                                <small class="text-muted">
                                                    @if (campaign.TargetReach.HasValue)
                                                    {
                                                        var reachPercent = campaign.TargetReach.Value > 0 
                                                            ? ((decimal)(campaign.ViewCount ?? 0) / campaign.TargetReach.Value) * 100 
                                                            : 0;
                                                        <span class="d-block">👁️ @String.Format("{0:F0}%", reachPercent)</span>
                                                    }
                                                    @if (campaign.TargetRevenue.HasValue)
                                                    {
                                                        var revenuePercent = campaign.TargetRevenue.Value > 0 
                                                            ? ((campaign.RevenueGenerated ?? 0) / campaign.TargetRevenue.Value) * 100 
                                                            : 0;
                                                        <span class="d-block">💰 @String.Format("{0:F0}%", revenuePercent)</span>
                                                    }
                                                </small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td><span class="@statusClass">@campaign.Status</span></td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@campaign.CampaignId" asp-route-pageNumber="@Model.PageNumber" class="btn btn-sm btn-info" title="Chi tiết">
                                                    <i class="mdi mdi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@campaign.CampaignId" asp-route-pageNumber="@Model.PageNumber" class="btn btn-sm btn-warning" title="Chỉnh sửa">
                                                    <i class="mdi mdi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@campaign.CampaignId" asp-route-pageNumber="@Model.PageNumber" class="btn btn-sm btn-danger" title="Xóa" onclick="return confirm('Bạn có chắc muốn xóa chiến dịch này?')">
                                                    <i class="mdi mdi-delete"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model != null && Model.TotalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-3">
                        <ul class="pagination justify-content-center">
                            <!-- Previous Button -->
                            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" 
                                   asp-route-searchTerm="@Context.Request.Query["searchTerm"]"
                                   asp-route-campaignType="@Context.Request.Query["campaignType"]"
                                   asp-route-status="@Context.Request.Query["status"]"
                                   asp-route-startDate="@Context.Request.Query["startDate"]"
                                   asp-route-endDate="@Context.Request.Query["endDate"]"
                                   asp-route-pageNumber="@(Model.PageNumber - 1)">«</a>
                            </li>

                            @{
                                var startPage = Math.Max(1, Model.PageNumber - 2);
                                var endPage = Math.Min(Model.TotalPages, Model.PageNumber + 2);
                            }

                            @for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-action="Index"
                                       asp-route-searchTerm="@Context.Request.Query["searchTerm"]"
                                       asp-route-campaignType="@Context.Request.Query["campaignType"]"
                                       asp-route-status="@Context.Request.Query["status"]"
                                       asp-route-startDate="@Context.Request.Query["startDate"]"
                                       asp-route-endDate="@Context.Request.Query["endDate"]"
                                       asp-route-pageNumber="@i">@i</a>
                                </li>
                            }

                            <!-- Next Button -->
                            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="Index"
                                   asp-route-searchTerm="@Context.Request.Query["searchTerm"]"
                                   asp-route-campaignType="@Context.Request.Query["campaignType"]"
                                   asp-route-status="@Context.Request.Query["status"]"
                                   asp-route-startDate="@Context.Request.Query["startDate"]"
                                   asp-route-endDate="@Context.Request.Query["endDate"]"
                                   asp-route-pageNumber="@(Model.PageNumber + 1)">»</a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}