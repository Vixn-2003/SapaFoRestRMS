@model WebSapaFoRestRMSForStaff.Models.CampaignDTO.MarketingCampaignCreateDto
@{
    ViewData["Title"] = "Tạo chiến dịch mới";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="card-title mb-0">Tạo chiến dịch tiếp thị mới</h4>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="mdi mdi-arrow-left"></i> Quay lại
                    </a>
                </div>

                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                    <div class="row">
                        <div class="col-md-8">
                            <!-- Title -->
                            <div class="mb-3">
                                <label asp-for="Title" class="form-label">Tiêu đề <span class="text-danger">*</span></label>
                                <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề chiến dịch..." />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <!-- Target Audience -->
                            <div class="mb-3">
                                <label asp-for="TargetAudience" class="form-label">Đối tượng mục tiêu</label>
                                <textarea asp-for="TargetAudience" class="form-control" rows="2" placeholder="VD: Sinh viên, nhân viên văn phòng, gia đình..."></textarea>
                                <span asp-validation-for="TargetAudience" class="text-danger"></span>
                            </div>

                            <!-- Date Range -->
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="StartDate" class="form-label">Ngày bắt đầu</label>
                                    <input asp-for="StartDate" type="date" class="form-control" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="EndDate" class="form-label">Ngày kết thúc</label>
                                    <input asp-for="EndDate" type="date" class="form-control" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Budget & Campaign Type -->
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Budget" class="form-label">Ngân sách (VND)</label>
                                    <input asp-for="Budget" type="number" class="form-control" step="1000" placeholder="0" />
                                    <span asp-validation-for="Budget" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="CampaignType" class="form-label">Loại chiến dịch</label>
                                    <select asp-for="CampaignType" class="form-select">
                                        <option value="">-- Chọn loại --</option>
                                        <option value="Discount">Discount (Giảm giá)</option>
                                        <option value="Promotion">Promotion (Khuyến mãi)</option>
                                        <option value="Event">Event (Sự kiện)</option>
                                    </select>
                                    <span asp-validation-for="CampaignType" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Status & Voucher -->
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Status" class="form-label">Trạng thái</label>
                                    <select asp-for="Status" class="form-select">
                                        <option value="Pending">Pending (Chờ duyệt)</option>
                                        <option value="Active">Active (Hoạt động)</option>
                                        <option value="Completed">Completed (Hoàn thành)</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="VoucherId" class="form-label">Voucher áp dụng</label>
                                    <select asp-for="VoucherId" class="form-select" id="voucherSelect">
                                        <option value="">-- Không áp dụng --</option>
                                        <!-- Will be populated via AJAX -->
                                    </select>
                                    <span asp-validation-for="VoucherId" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Target KPI -->
                            <div class="card bg-light mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">🎯 Chỉ tiêu KPI</h5>
                                    <div class="row">
                                        <div class="col-md-6 mb-2">
                                            <label asp-for="TargetReach" class="form-label">Mục tiêu lượt tiếp cận</label>
                                            <input asp-for="TargetReach" type="number" class="form-control" placeholder="VD: 10000" />
                                            <small class="text-muted">Số lượt xem mục tiêu</small>
                                        </div>
                                        <div class="col-md-6 mb-2">
                                            <label asp-for="TargetRevenue" class="form-label">Mục tiêu doanh thu (VND)</label>
                                            <input asp-for="TargetRevenue" type="number" class="form-control" step="1000" placeholder="VD: 100000000" />
                                            <small class="text-muted">Doanh thu kỳ vọng</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Image Upload -->
                            <div class="mb-3">
                                <label for="imageFile" class="form-label">Ảnh Banner</label>
                                <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                                <small class="text-muted">Định dạng: JPG, PNG, GIF. Kích thước tối đa: 5MB</small>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <!-- Image Preview -->
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Xem trước ảnh</h5>
                                    <img id="imagePreview" src="/images/placeholder-image.png" class="img-fluid rounded" alt="Preview" style="max-height: 300px;">
                                </div>
                            </div>

                            <!-- Tips -->
                            <div class="card bg-info text-white mt-3">
                                <div class="card-body">
                                    <h6 class="card-title"><i class="mdi mdi-lightbulb-on"></i> Gợi ý</h6>
                                    <ul class="small mb-0">
                                        <li>Tiêu đề nên ngắn gọn, hấp dẫn</li>
                                        <li>Ảnh banner nên có kích thước 1200x630px</li>
                                        <li>Đặt mục tiêu KPI rõ ràng để đo lường hiệu quả</li>
                                        <li>Voucher giúp tăng tỷ lệ chuyển đổi</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="mdi mdi-close"></i> Hủy
                        </a>
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="mdi mdi-check"></i> Tạo chiến dịch
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Image preview
        document.getElementById('imageFile').addEventListener('change', function (e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (event) {
                    document.getElementById('imagePreview').src = event.target.result;
                };
                reader.readAsDataURL(file);
            }
        });

        // Load vouchers from API
        async function loadVouchers() {
            try {
                const response = await fetch('https://localhost:7096/api/Voucher');
                if (response.ok) {
                    const result = await response.json();
                    const vouchers = result.data || result; // Handle both paginated and non-paginated responses

                    const select = document.getElementById('voucherSelect');
                    vouchers.forEach(v => {
                        const option = document.createElement('option');
                        option.value = v.voucherId;
                        option.textContent = `${v.code} - ${v.description || 'No description'}`;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Error loading vouchers:', error);
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            loadVouchers();

            // Set min date to today
            const today = new Date().toISOString().split('T')[0];
            document.querySelector('input[name="StartDate"]').min = today;
            document.querySelector('input[name="EndDate"]').min = today;
        });
    </script>
}