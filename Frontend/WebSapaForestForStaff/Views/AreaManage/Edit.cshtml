@model WebSapaForestForStaff.DTOs.AreaManage.AreaUpdateDto

@{
    ViewData["Title"] = "Chỉnh sửa khu vực";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">✏️ Chỉnh sửa khu vực</h2>
    <hr />

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="AreaId" />

        <div class="form-group mb-3">
            <label asp-for="AreaName" class="form-label fw-bold">Tên khu vực</label>
            <input asp-for="AreaName" class="form-control" />
            <span asp-validation-for="AreaName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Floor" class="form-label fw-bold">Tầng</label>
            <input asp-for="Floor" type="number" min="1" class="form-control" />
            <span asp-validation-for="Floor" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label fw-bold">Mô tả</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary px-4">⬅ Quay lại</a>
            <button type="submit" class="btn btn-primary px-4">💾 Cập nhật</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
