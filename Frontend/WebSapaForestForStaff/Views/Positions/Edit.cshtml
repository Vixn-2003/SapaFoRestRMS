@model WebSapaForestForStaff.DTOs.Positions.PositionUpdateRequest
@{
    ViewData["Title"] = "Sửa vị trí";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

@section Styles {
    <link rel="stylesheet" href="~/css/design-system.css" />
}

<div class="container mt-4">
    <div class="card card-custom">
        <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
            <h3 class="heading-h2 m-0">Sửa vị trí</h3>
            <a asp-action="Index" class="btn-text-custom">Quay lại</a>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" id="positionEditForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="PositionId" />
                <div class="mb-3">
                    <label class="form-label form-label-custom">Tên vị trí</label>
                    <input asp-for="PositionName" class="form-control form-control-custom" />
                    <span asp-validation-for="PositionName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label form-label-custom">Mô tả</label>
                    <textarea asp-for="Description" class="form-control form-control-custom" rows="3"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label form-label-custom">Trạng thái</label>
                    <select asp-for="Status" class="form-select form-control-custom">
                        <option value="0">Hoạt động</option>
                        <option value="1">Tạm dừng</option>
                        <option value="2">Đã ẩn</option>
                    </select>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn-primary-custom">Lưu</button>
                    <a asp-action="Index" class="btn-secondary-custom">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/toast-notification.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) { return new bootstrap.Tooltip(tooltipTriggerEl); });
        });
    </script>
}
