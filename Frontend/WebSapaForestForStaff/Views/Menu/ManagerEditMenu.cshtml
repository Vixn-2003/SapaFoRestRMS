@using WebSapaForestForStaff.DTOs

@{
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}
@model WebSapaForestForStaff.Controllers.MenuViewModel

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chỉnh sửa món ăn</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f5f7fa;
            padding: 20px;
        }

        .container {
            padding-left: 0px;
            padding-right: 0px;
            margin: 0 auto;
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            overflow: hidden;
        }

        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 12px;
        }

            .header h1 {
                font-size: 24px;
                font-weight: 600;
            }

        .form-content {
            padding: 10px;
        }

        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 5px;
            margin-bottom: 12px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

            .form-group.full-width {
                grid-column: 1 / -1;
            }

        label {
            font-size: 14px;
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
        }

        input[type="text"],
        input[type="number"],
        select,
        textarea {
            padding: 10px 12px;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.3s;
            font-family: inherit;
        }

            input[type="text"]:focus,
            input[type="number"]:focus,
            select:focus,
            textarea:focus {
                outline: none;
                border-color: #667eea;
                box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            }

        textarea {
            resize: vertical;
            min-height: 100px;
        }

        .ingredients-section {
            margin-top: 32px;
            padding-top: 24px;
            border-top: 2px solid #e2e8f0;
        }

            .ingredients-section h2 {
                font-size: 18px;
                color: #333;
                margin-bottom: 16px;
            }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-primary {
            background: #667eea;
            color: white;
        }

            .btn-primary:hover {
                background: #5568d3;
                transform: translateY(-1px);
            }

        .btn-danger {
            background: #f56565;
            color: white;
            padding: 6px 12px;
            font-size: 13px;
        }

            .btn-danger:hover {
                background: #e53e3e;
            }

        .ingredients-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 0;
        }

            .ingredients-table thead {
                background: #f7fafc;
            }

            .ingredients-table th {
                padding: 12px;
                text-align: left;
                font-size: 13px;
                font-weight: 600;
                color: #4a5568;
                border-bottom: 2px solid #e2e8f0;
            }

            .ingredients-table td {
                padding: 12px;
                border-bottom: 1px solid #e2e8f0;
                font-size: 14px;
            }

            .ingredients-table tbody tr:hover {
                background: #f7fafc;
            }

        .empty-state {
            text-align: center;
            padding: 40px;
            color: #a0aec0;
        }

        .form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 12px;
            margin-top: 24px;
            padding-top: 24px;
            border-top: 2px solid #e2e8f0;
        }

        .ingredient-checkbox {
            cursor: pointer;
            width: 18px;
            height: 18px;
        }

        .table-wrapper {
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            overflow: hidden;
            max-height: 400px;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>✏️ Chỉnh sửa món ăn</h1>
        </div>

        <div class="form-content">
            <form id="foodForm">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="foodName">Tên món ăn *</label>
                        <input type="text" id="foodName" name="foodName" required placeholder="Nhập tên món ăn" asp-for="ProductsMenu.Name">
                    </div>

                    <div class="form-group">
                        <label for="menuType">Loại thực đơn *</label>
                        <select asp-for="ProductsMenu.CategoryId" class="form-control">
                            @foreach (var cat in Model.ProductsCategory)
                            {
                                if (Model.ProductsMenu.CategoryId == cat.CategoryId)
                                {
                                    <option value="@cat.CategoryId" selected="selected">@cat.CategoryName</option>
                                }
                                else
                                {
                                    <option value="@cat.CategoryId">@cat.CategoryName</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="price">Giá (đ) *</label>
                        <input type="number" id="price" name="price" required placeholder="0" min="0" asp-for="ProductsMenu.Price">
                    </div>

                    <div class="form-group">
                        <label for="IsAvailable">Tình trạng *</label>
                        <select asp-for="ProductsMenu.IsAvailable" class="form-control">
                            <option value="true">Còn món</option>
                            <option value="false">Hết món</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="CourseType">Kiểu món</label>
                        <select asp-for="ProductsMenu.CourseType" class="form-control">
                            <option value="Drink">Nước uống</option>
                            <option value="Dessert">Món tráng miệng</option>
                            <option value="MainDish">Món chính</option>
                            <option value="Appetizer">Món khai vị</option>
                            
                        </select>
                    </div>

                    <div class="form-group" style="display: contents;align-items: center;gap: 10px;">
                        <div style="flex: 1;">
                            <label>Chọn hình ảnh</label>
                            <input asp-for="ProductsMenu.ImageUrl" type="file" id="imageFile" name="imageFile" accept="image/*"
                                   class="form-control" onchange="previewLocalImage(event)">
                        </div>

                        <div style="width: 120px; height: 120px; border: 1px solid #ccc; display: flex; align-items: center; justify-content: center;">
                            <img id="imagePreview"
                                 src="@(!string.IsNullOrEmpty(Model.ProductsMenu.ImageUrl) ? Url.Content(Model.ProductsMenu.ImageUrl) : "")"
                                 alt="Preview"
                                 style="max-width: 100%; max-height: 100%; object-fit: contain;
                    @(string.IsNullOrEmpty(Model.ProductsMenu.ImageUrl) ? "display: none;" : "display: block;")">
                        </div>
                    </div>

                    <div class="form-group full-width">
                        <label for="description">Mô tả</label>
                        <textarea asp-for="ProductsMenu.Description" id="description" name="description" placeholder="Nhập mô tả chi tiết về món ăn..."></textarea>
                    </div>
                </div>

                <div class="ingredients-section">
                    <h2>🥗 Danh sách nguyên liệu</h2>

                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-top: 20px;">
                        <!-- Bảng trái: Danh sách nguyên liệu có thể chọn -->
                        <div>
                            <div style="margin-bottom: 12px;">
                                <input type="text" id="searchIngredient" placeholder="🔍 Tìm kiếm nguyên liệu..."
                                       style="width: 100%; padding: 10px 12px; border: 2px solid #e2e8f0; border-radius: 8px; font-size: 14px;">
                            </div>
                            <div class="table-wrapper">
                                <table class="ingredients-table">
                                    <thead>
                                        <tr>
                                            <th style="width: 50px;">Chọn</th>
                                            <th>Tên nguyên liệu</th>
                                            <th style="width: 80px;">Đơn vị</th>
                                        </tr>
                                    </thead>
                                    <tbody id="availableIngredientsBody">
                                        @foreach (var ingredient in Model.Ingredient)
                                        {
                                            <tr data-ingredient-id="@ingredient.IngredientId"
                                                data-ingredient-name="@ingredient.Name"
                                                data-ingredient-unit="@ingredient.Unit">
                                                <td style="text-align: center;">
                                                    <input type="checkbox"
                                                           class="ingredient-checkbox"
                                                           value="@ingredient.IngredientId"
                                                           data-name="@ingredient.Name"
                                                           data-unit="@ingredient.Unit"
                                                           onchange="toggleIngredient(this)">
                                                </td>
                                                <td>@ingredient.Name</td>
                                                <td>@(ingredient.Unit == "piece" ? "Cái" : ingredient.Unit)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Bảng phải: Nguyên liệu đã chọn -->
                        <div>
                            <div style="margin-bottom: 12px; height: 48px; display: flex; align-items: center;">
                                <h3 style="font-size: 14px; font-weight: 600; color: #4a5568;">Nguyên liệu đã chọn</h3>
                            </div>
                            <div class="table-wrapper">
                                <table class="ingredients-table">
                                    <thead>
                                        <tr>
                                            <th>Tên nguyên liệu</th>
                                            <th style="width: 120px;">Số lượng</th>
                                            <th style="width: 80px;">Đơn vị</th>
                                            <th style="width: 60px;">Xóa</th>
                                        </tr>
                                    </thead>
                                    <tbody id="selectedIngredientsBody">
                                        <tr>
                                            <td colspan="4" class="empty-state">
                                                Chưa chọn nguyên liệu nào
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="button" class="btn" style="background: #cbd5e0; color: #2d3748;">Hủy</button>
                    <button type="submit" class="btn btn-primary">💾 Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function previewLocalImage(event) {
            const file = event.target.files[0];
            const img = document.getElementById('imagePreview');

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    img.src = e.target.result;
                    img.style.display = 'block';
                };
                reader.readAsDataURL(file);
            } else {
                img.src = '';
                img.style.display = 'none';
            }
        }

        let selectedIngredients = [];

        // Xử lý tìm kiếm nguyên liệu
        document.getElementById('searchIngredient').addEventListener('input', function (e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('#availableIngredientsBody tr');

            rows.forEach(row => {
                const name = row.getAttribute('data-ingredient-name');
                if (name && name.toLowerCase().includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });

        // Xử lý khi chọn/bỏ chọn nguyên liệu
        function toggleIngredient(checkbox) {
            const ingredientId = parseInt(checkbox.value);
            const ingredientName = checkbox.getAttribute('data-name');
            const ingredientUnit = checkbox.getAttribute('data-unit');

            if (checkbox.checked) {
                // Thêm nguyên liệu vào danh sách đã chọn
                const ingredient = {
                    id: ingredientId,
                    name: ingredientName,
                    unit: ingredientUnit,
                    quantity: ingredientUnit.toLowerCase() === 'piece' ? 1 : 0
                };
                selectedIngredients.push(ingredient);
            } else {
                // Xóa nguyên liệu khỏi danh sách
                const index = selectedIngredients.findIndex(ing => ing.id === ingredientId);
                if (index !== -1) {
                    selectedIngredients.splice(index, 1);
                }
            }

            renderSelectedIngredients();
        }

        // Hiển thị danh sách nguyên liệu đã chọn
        function renderSelectedIngredients() {
            const tbody = document.getElementById('selectedIngredientsBody');

            if (selectedIngredients.length === 0) {
                tbody.innerHTML = `
                            <tr>
                                <td colspan="4" class="empty-state">
                                    Chưa chọn nguyên liệu nào
                                </td>
                            </tr>
                        `;
                return;
            }

            tbody.innerHTML = selectedIngredients.map((ing, index) => {
                const isPiece = ing.unit.toLowerCase() === 'piece';
                const step = isPiece ? '1' : '0.01';
                const min = isPiece ? '1' : '0';

                return `
                            <tr>
                                <td>${ing.name}</td>
                                <td>
                                    <input type="number"
                                           value="${ing.quantity}"
                                           min="${min}"
                                           step="${step}"
                                           style="width: 100%; padding: 6px 8px; border: 1px solid #e2e8f0; border-radius: 4px; font-size: 14px;"
                                           onchange="updateQuantity(${index}, this.value)"
                                           required>
                                    <input type="hidden" name="MenuIngredients[${index}].IngredientId" value="${ing.id}">
                                    <input type="hidden" name="MenuIngredients[${index}].Quantity" value="${ing.quantity}" id="hidden_quantity_${index}">
                                    <input type="hidden" name="MenuIngredients[${index}].Unit" value="${ing.unit}">
                                </td>
                                <td>${ing.unit === 'piece' ? 'Cái' : ing.unit}</td>
                                <td style="text-align: center;">
                                    <button type="button"
                                            class="btn btn-danger"
                                            onclick="removeIngredient(${ing.id})"
                                            style="padding: 4px 8px; font-size: 12px;">
                                        ✕
                                    </button>
                                </td>
                            </tr>
                        `;
            }).join('');
        }

        // Cập nhật số lượng nguyên liệu
        function updateQuantity(index, value) {
            const quantity = parseFloat(value);
            const ingredient = selectedIngredients[index];

            if (ingredient.unit.toLowerCase() === 'piece') {
                // Làm tròn thành số nguyên nếu là "piece"
                selectedIngredients[index].quantity = Math.round(quantity);
            } else {
                selectedIngredients[index].quantity = quantity;
            }

            // Cập nhật hidden input
            const hiddenInput = document.getElementById(`hidden_quantity_${index}`);
            if (hiddenInput) {
                hiddenInput.value = selectedIngredients[index].quantity;
            }
        }

        // Xóa nguyên liệu
        function removeIngredient(ingredientId) {
            if (confirm('Bạn có chắc muốn xóa nguyên liệu này?')) {
                // Bỏ check checkbox
                const checkbox = document.querySelector(`input[type="checkbox"][value="${ingredientId}"]`);
                if (checkbox) {
                    checkbox.checked = false;
                }

                // Xóa khỏi danh sách
                const index = selectedIngredients.findIndex(ing => ing.id === ingredientId);
                if (index !== -1) {
                    selectedIngredients.splice(index, 1);
                }

                renderSelectedIngredients();
            }
        }

        // Xử lý submit form
        document.getElementById('foodForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            // Validate có nguyên liệu được chọn không
            if (selectedIngredients.length === 0) {
                alert('Vui lòng chọn ít nhất một nguyên liệu!');
                return;
            }

            // Validate số lượng
            let hasInvalidQuantity = false;
            selectedIngredients.forEach(ing => {
                if (!ing.quantity || ing.quantity <= 0) {
                    hasInvalidQuantity = true;
                }
            });

            if (hasInvalidQuantity) {
                alert('Vui lòng nhập số lượng hợp lệ cho tất cả nguyên liệu!');
                return;
            }

            // Tạo FormData để gửi cả file và dữ liệu
            const formData = new FormData();

            // Thêm thông tin món ăn
            formData.append('ProductsMenu.Name', document.getElementById('foodName').value);
            formData.append('ProductsMenu.CategoryId', document.querySelector('[name="ProductsMenu.CategoryId"]').value);
            formData.append('ProductsMenu.Price', document.getElementById('price').value);
            formData.append('ProductsMenu.IsAvailable', document.querySelector('[name="ProductsMenu.IsAvailable"]').value);
            formData.append('ProductsMenu.Description', document.getElementById('description').value);

            // Thêm file ảnh (nếu có)
            const imageFile = document.getElementById('imageFile').files[0];
            if (imageFile) {
                formData.append('ImageFile', imageFile);
            }

            // Thêm danh sách nguyên liệu
            selectedIngredients.forEach((ingredient, index) => {
                formData.append(`MenuIngredients[${index}].IngredientId`, ingredient.id);
                formData.append(`MenuIngredients[${index}].Quantity`, ingredient.quantity);
                formData.append(`MenuIngredients[${index}].Unit`, ingredient.unit);
            });

            try {
                // Hiển thị loading
                const submitBtn = document.querySelector('button[type="submit"]');
                const originalText = submitBtn.innerHTML;
                submitBtn.disabled = true;
                submitBtn.innerHTML = '⏳ Đang lưu...';

                // Gửi dữ liệu đến controller
                const response = await fetch('/Menu/UpdateMenu', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    const result = await response.json();
                    alert('✅ Cập nhật món ăn thành công!');
                    // Chuyển hướng hoặc reload trang
                    window.location.href = '/Menu/Index';
                } else {
                    const error = await response.json();
                    alert('❌ Lỗi: ' + (error.message || 'Không thể cập nhật món ăn'));
                }

                // Khôi phục nút submit
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            } catch (error) {
                console.error('Error:', error);
                alert('❌ Có lỗi xảy ra: ' + error.message);
            }
        });
    </script>
</body>
</html>