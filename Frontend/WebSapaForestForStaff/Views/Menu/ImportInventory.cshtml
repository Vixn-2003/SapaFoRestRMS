        // ===== TẠO MÃ NGUYÊN LIỆU MỚI KHÔNG TRÙNG =====
        function ipGenerateNewCode() {
            const now = new Date();
            const prefix = "NL";

            // Lấy năm (2 số cuối), tháng
            const year = String(now.getFullYear()).slice(-2); // VD: 25
            const month = String(now.getMonth() + 1).padStart(2, '0'); // VD: 11

            const datePrefix = `${prefix}${year}${month}`; // VD: NL2511

            // Lấy tất cả mã nguyên liệu hiện có
            const existingCodes = [
                ...ingredientList.map(i => i.IngredientCode || ''),
                ...ipImportList.map(i => i.code || '')
            ];

            console.log('Existing ingredient codes:', existingCodes); // Debug

            let newCode;
            let attempts = 0;
            const maxAttempts = 1000; // Giới hạn số lần thử

            do {
                // Tạo số ngẫu nhiên 3 chữ số (001-999)
                const randomNum = String(Math.floor(Math.random() * 999) + 1).padStart(3, '0');
                newCode = `${datePrefix}${randomNum}`; // VD: NL2511001

                attempts++;
                if (attempts >= maxAttempts) {
                    console.error('Không thể tạo mã nguyên liệu duy nhất sau', maxAttempts, 'lần thử');
                    // Fallback: thêm timestamp
                    newCode = `${datePrefix}${Date.now().toString().slice(-3)}`;
                    break;
                }
            } while (existingCodes.includes(newCode));

            console.log('Generated new ingredient code:', newCode); // Debug
            return newCode;
        }

        // ===== TẠO MÃ ĐƠN NHẬP MỚI KHÔNG TRÙNG VỚI DATABASE =====
        function generateNewImportCode() {
            const now = new Date();
            const prefix = "PO";

            // Lấy năm (2 số cuối), tháng, ngày
            const year = String(now.getFullYear()).slice(-2); // VD: 25
            const month = String(now.getMonth() + 1).padStart(2, '0'); // VD: 11
            const day = String(now.getDate()).padStart(2, '0'); // VD: 13

            const datePrefix = `${prefix}${year}${month}${day}`; // VD: PO251113

            // Lấy tất cả mã đơn hiện có từ database
            const existingCodes = purchaseList.map(p => p.PurchaseOrderCode || p.Code || '');

            console.log('Existing purchase codes:', existingCodes); // Debug

            let newCode;
            let attempts = 0;
            const maxAttempts = 1000; // Giới hạn số lần thử để tránh infinite loop

            do {
                // Tạo số ngẫu nhiên 3 chữ số (001-999)
                const randomNum = String(Math.floor(Math.random() * 999) + 1).padStart(3, '0');
                newCode = `${datePrefix}${randomNum}`; // VD: PO251113001

                attempts++;
                if (attempts >= maxAttempts) {
                    console.error('Không thể tạo mã đơn hàng duy nhất sau', maxAttempts, 'lần thử');
                    // Fallback: thêm timestamp
                    newCode = `${datePrefix}${Date.now().toString().slice(-3)}`;
                    break;
                }
            } while (existingCodes.includes(newCode));

            console.log('Generated new code:', newCode); // Debug
            return newCode;
        }

