    function displaySupplierDetail(supplierId) {
        const supplier = suppliersData[supplierId];
        if (supplier) {
            document.getElementById('supplierDetail').style.display = 'block';
            document.getElementById('detailName').textContent = supplier.name;
            document.getElementById('detailPhone').textContent = supplier.phone;
            document.getElementById('detailContact').textContent = supplier.contact;
            document.getElementById('detailEmail').textContent = supplier.email;
            document.getElementById('detailAddress').textContent = supplier.address;
            
            // Cập nhật select
            document.getElementById('supplierSelect').value = supplierId;
        }
    }

    // Sự kiện chọn nhà cung cấp từ dropdown
    document.getElementById('supplierSelect').addEventListener('change', function() {
        const supplierId = this.value;
        if (supplierId) {
            displaySupplierDetail(supplierId);
        } else {
            document.getElementById('supplierDetail').style.display = 'none';
        }
    });

    // Sự kiện click vào các card nhà cung cấp
    document.querySelectorAll('.supplier-card').forEach(card => {
        card.addEventListener('click', function() {
            const supplierId = this.getAttribute('data-supplier-id');
            displaySupplierDetail(supplierId);
            
            // Scroll to supplier detail
            document.getElementById('supplierDetail').scrollIntoView({ 
                behavior: 'smooth', 
                block: 'nearest' 
            });
        });
    });

    // Filter nhà cung cấp theo nguyên liệu
    document.getElementById('materialFilter').addEventListener('change', function() {
        const selectedMaterial = this.value;
        const supplierCards = document.querySelectorAll('#materialSupplierList .supplier-card');
        
        supplierCards.forEach(card => {
            const cardMaterial = card.getAttribute('data-material');
            
            if (selectedMaterial === '' || cardMaterial === selectedMaterial) {
                card.classList.remove('hidden');
            } else {
                card.classList.add('hidden');
            }
        });

        // Sắp xếp lại số thứ tự
        let visibleIndex = 1;
        supplierCards.forEach(card => {
            if (!card.classList.contains('hidden')) {
                const avatar = card.querySelector('.import-supplier-avatar');
                avatar.textContent = visibleIndex;
                visibleIndex++;
            }
        });
    });

    // Tự động tính tổng tiền khi thay đổi số lượng
    document.querySelectorAll('.quantity-input').forEach(input => {
        input.addEventListener('input', function() {
            const row = this.closest('tr');
            const quantity = parseFloat(this.value) || 0;
            const priceText = row.cells[5].textContent;
            const price = parseFloat(priceText.replace(/[^\d]/g, ''));
            const total = quantity * price;
            row.cells[6].textContent = total.toLocaleString('vi-VN') + 'đ';
            
            updateTotal();
        });
    });

    // Xóa dòng
    document.querySelectorAll('.import-btn-remove').forEach(btn => {
        btn.addEventListener('click', function() {
            if(confirm('Bạn có chắc muốn xóa nguyên liệu này?')) {
                this.closest('tr').remove();
                updateTotal();
                updateRowNumbers();
            }
        });
    });

    function updateTotal() {
        let total = 0;
        document.querySelectorAll('.import-materials-table tbody tr').forEach(row => {
            const amountText = row.cells[6].textContent;
            const amount = parseFloat(amountText.replace(/[^\d]/g, ''));
            total += amount;
        });
        document.querySelector('.import-total-amount').textContent = total.toLocaleString('vi-VN') + 'đ';
    }

    function updateRowNumbers() {
        document.querySelectorAll('.import-materials-table tbody tr').forEach((row, index) => {
            row.cells[0].textContent = index + 1;
        });
    }

    // Thêm nguyên liệu
    document.querySelector('.import-btn-add').addEventListener('click', function() {
        alert('Chức năng thêm nguyên liệu - Cần kết nối với modal chọn nguyên liệu');
    });

    // Các nút action
    document.querySelector('.import-btn-back').addEventListener('click', () => {
        if(confirm('Bạn có muốn quay lại? Dữ liệu chưa lưu sẽ bị mất.')) {
            window.history.back();
        }
    });

    document.querySelector('.import-btn-save').addEventListener('click', () => {
        alert('Đã lưu nháp đơn nhập hàng');
    });

    document.querySelector('.import-btn-confirm').addEventListener('click', () => {
        if(confirm('Xác nhận giao hàng? Hàng sẽ được cập nhật vào kho.')) {
            alert('Đã xác nhận giao hàng thành công');
        }
    });

    document.querySelector('.import-btn-delete').addEventListener('click', () => {
        if(confirm('Xóa đơn hàng này? Hành động không thể hoàn tác.')) {
            alert('Đã xóa đơn hàng');
            window.history.back();
        }
    });
</script>
