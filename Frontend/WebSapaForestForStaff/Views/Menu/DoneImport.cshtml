                        </tbody>

                    </table>
                </div>
            </div>

            @{
                decimal totalAmount = 0;
                if (Model.PurchaseOrderDetails != null && Model.PurchaseOrderDetails.Any())
                {
                    totalAmount = Model.PurchaseOrderDetails.Sum(x =>
                    (x.Subtotal != 0 ? x.Subtotal : x.Quantity * x.UnitPrice)
                    );
                }
            }

            <!-- Total -->
            <div class="total-box">
                <div class="total-content">
                    <span class="total-label">Tổng giá trị đơn hàng:</span>
                    <span class="total-amount">@string.Format("{0:N0}₫", totalAmount)</span>

                </div>
            </div>

            <!-- Inspector Confirmation -->
            <!-- Thông tin xác nhận -->
            <div class="confirmation-info-section">
                <div class="confirmation-header">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="width: 24px; height: 24px;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <h3>Thông tin xác nhận</h3>
                </div>

                @if (Model.IdConfirm != null && Model.TimeConfirm != null)
                {
                    <div class="confirmation-content">
                        <div class="confirmation-box @(Model.Status == "Completed" ? "status-completed" : "status-cancelled")">
                            <div class="status-header">
                                @if (Model.Status == "Completed")
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <span>Đơn hàng đã được chấp nhận</span>
                                }
                                else
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <span>Đơn hàng đã bị từ chối</span>
                                }
                            </div>

                            <div class="confirmation-details">
                                <div class="confirmation-row">
                                    <span class="label">Người xác nhận:</span>
                                    <span class="value">@Model.IdConfirm</span>
                                </div>
                                <div class="confirmation-row">
                                    <span class="label">Thời gian xác nhận:</span>
                                    <span class="value">@Model.TimeConfirm?.ToString("dd/MM/yyyy HH:mm:ss")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="confirmation-content">
                        <p style="color: #9ca3af; text-align: center; padding: 20px;">Chưa có thông tin xác nhận</p>
                    </div>
                }
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <button type="button" class="btn-back" onclick="goBack()">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="width: 20px; height: 20px; margin-right: 8px;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Quay lại
                </button>
                <button type="button" class="btn-print" onclick="printOrder()">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="width: 20px; height: 20px; margin-right: 8px;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
                    </svg>
                    In phiếu nhập hàng
                </button>
            </div>
           
        </div>
    </div>

   

    <!-- Image Slider Sidebar -->
    <div id="imageSliderOverlay" class="image-slider-overlay">
        <div class="image-slider-sidebar">
            <div class="image-slider-header">
                <h3 class="image-slider-title">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    Hình ảnh chứng thực
                </h3>
                <button class="image-slider-close" onclick="closeImageSlider()">&times;</button>
            </div>
            <div class="image-slider-body" id="imageSliderBody">
                @if (!string.IsNullOrEmpty(Model.UrlImg))
                {
                    @* Giả sử UrlImg chứa nhiều URL cách nhau bởi dấu phẩy *@
                    var imageUrls = Model.UrlImg.Split(',');
                    int imageIndex = 1;

                    foreach (var imageUrl in imageUrls)
                    {
                        <div class="image-container">
                            <div class="image-wrapper" onclick="zoomImage(this)">
                                <img src="@imageUrl.Trim()" alt="Hình ảnh @imageIndex" onerror="this.src='https://via.placeholder.com/800x600/e5e7eb/6b7280?text=Loi+tai+anh'">
                            </div>
                            <p class="image-caption">Hình ảnh chứng thực @imageIndex</p>
                        </div>
                        imageIndex++;
                    }
                }
                else
                {
                    <div class="empty-images">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <p>Chưa có hình ảnh chứng thực</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Image Zoom Modal -->
    <div id="imageZoomModal" class="image-zoom-modal" onclick="closeZoom()">
        <div class="image-zoom-container">
            <img id="zoomedImage" src="" alt="Zoomed">
            <div class="zoom-controls" onclick="event.stopPropagation()">
                <button class="zoom-btn" onclick="zoomInOut(-0.2)">−</button>
                <button class="zoom-btn" onclick="resetZoom()">⟲</button>
                <button class="zoom-btn" onclick="zoomInOut(0.2)">+</button>
            </div>
        </div>
    </div>

    <script>
        let inspectorConfirmed = false;

        function handleInspectorConfirm(checkbox) {
            inspectorConfirmed = checkbox.checked;
            const inspectorInfo = document.getElementById('inspectorInfo');
            const checkIcon = document.getElementById('checkIcon');
            const acceptBtn = document.getElementById('acceptBtn');

            if (inspectorConfirmed) {
                // Hiển thị thông tin người xác nhận
                inspectorInfo.style.display = 'block';

                // Cập nhật thời gian xác nhận
                const now = new Date();
                const timeString = now.toLocaleString('vi-VN', {
                    day: '2-digit',
                    month: '2-digit',
                    year: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit'
                });
                document.getElementById('confirmTime').textContent = timeString;

                // Thay đổi màu icon
                checkIcon.style.color = '#16a34a';

                // Enable nút chấp nhận
                acceptBtn.classList.remove('disabled');
                acceptBtn.classList.add('enabled');
                acceptBtn.disabled = false;
            } else {
                // Ẩn thông tin người xác nhận
                inspectorInfo.style.display = 'none';

                // Thay đổi màu icon về mặc định
                checkIcon.style.color = '#9ca3af';

                // Disable nút chấp nhận
                acceptBtn.classList.remove('enabled');
                acceptBtn.classList.add('disabled');
                acceptBtn.disabled = true;
            }
        }

        function goBack() {
            if (confirm('Bạn có chắc chắn muốn quay lại?')) {
                window.history.back();
            }
        }


        

        // Đóng modal khi click bên ngoài
        document.getElementById('rejectModal').addEventListener('click', function(e) {
            if (e.target === this) {
                hideRejectModal();
            }
        });

        // Xử lý phím ESC để đóng modal
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                hideRejectModal();
            }
        });

        // ===== PRINT ORDER FUNCTION =====
        function printOrder() {
            if (confirm('Bạn có muốn in phiếu nhập hàng này?')) {
                window.print();
            }
        }

        // ===== TOAST NOTIFICATION SYSTEM =====
        function showToast(type, title, message, duration = 4000) {
            const container = document.getElementById('toastContainer');

            const icons = {
                success: '✓',
                error: '✕',
                warning: '⚠',
                info: 'ℹ'
            };

            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.innerHTML = `
                <div class="toast-icon">${icons[type]}</div>
                <div class="toast-content">
                    <div class="toast-title">${title}</div>
                    <div class="toast-message">${message}</div>
                </div>
                <button class="toast-close" onclick="removeToast(this)">&times;</button>
            `;

            container.appendChild(toast);

            // Auto remove after duration
            setTimeout(() => {
                removeToast(toast.querySelector('.toast-close'));
            }, duration);
        }

        function removeToast(button) {
            const toast = button.parentElement;
            toast.classList.add('removing');
            setTimeout(() => toast.remove(), 400);
        }

        // ===== CONFIRMATION MODAL =====
        function showConfirmModal(type, title, message) {
            const modal = document.getElementById('confirmModal');
            const iconWrapper = document.getElementById('confirmIcon');
            const titleEl = document.getElementById('confirmTitle');
            const messageEl = document.getElementById('confirmMessage');

            // Update icon and colors
            iconWrapper.className = `confirm-icon-wrapper ${type}`;

            if (type === 'success') {
                iconWrapper.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                `;
            } else if (type === 'error') {
                iconWrapper.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                `;
            }

            titleEl.textContent = title;
            messageEl.textContent = message;

            modal.classList.add('active');
        }

        function closeConfirmModal() {
            const modal = document.getElementById('confirmModal');
            modal.classList.remove('active');

            // Redirect sau khi đóng modal
            setTimeout(() => {
                window.location.href = '@Url.Action("Index", "MainImportInventory")';
            }, 300);
        }

        // Close modal khi click outside
        document.getElementById('confirmModal')?.addEventListener('click', function (e) {
            if (e.target === this) {
                closeConfirmModal();
            }
        });

        // ===== CHECK FOR TEMPDATA MESSAGES ON PAGE LOAD =====
        window.addEventListener('DOMContentLoaded', function () {
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                        // Hiển thị modal confirmation cho thành công
                            showConfirmModal('success', 'Thành công!', '@TempData["SuccessMessage"]');
            </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                        // Hiển thị toast cho lỗi
                            showToast('error', 'Lỗi!', '@TempData["ErrorMessage"]', 6000);
            </text>
        }
        });

        // ===== IMAGE SLIDER FUNCTIONS =====
        function openImageSlider() {
            document.getElementById('imageSliderOverlay').classList.add('active');
            document.body.classList.add('sidebar-open');
        }

        function closeImageSlider() {
            document.getElementById('imageSliderOverlay').classList.remove('active');
            document.body.classList.remove('sidebar-open');
        }

        // Close khi click vào overlay
        document.getElementById('imageSliderOverlay')?.addEventListener('click', function (e) {
            if (e.target === this) {
                closeImageSlider();
            }
        });
        // ===== IMAGE ZOOM FUNCTIONS =====
        let currentZoom = 1;

        function zoomImage(wrapper) {
            const img = wrapper.querySelector('img');
            const modal = document.getElementById('imageZoomModal');
            const zoomedImg = document.getElementById('zoomedImage');

            zoomedImg.src = img.src;
            currentZoom = 1;
            zoomedImg.style.transform = `scale(${currentZoom})`;
            modal.classList.add('active');
        }

        function closeZoom() {
            document.getElementById('imageZoomModal').classList.remove('active');
        }

        function zoomInOut(delta) {
            currentZoom = Math.max(0.5, Math.min(3, currentZoom + delta));
            document.getElementById('zoomedImage').style.transform = `scale(${currentZoom})`;
        }

        function resetZoom() {
            currentZoom = 1;
            document.getElementById('zoomedImage').style.transform = `scale(${currentZoom})`;
        }

        // ESC key để đóng
        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape') {
                closeImageSlider();
                closeZoom();
            }
        });
    </script>
</body>
</html>